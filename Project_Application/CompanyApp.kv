<Custom>:
    canvas.before:
        Rectangle:
            source: "/Users/m19-056/PycharmProjects/pythonProject1/Project_Unit_3/Project_Images/art-graffiti-wall-table-tennis.jpeg"
            size: self.size
            pos: self.pos
    MyButton:
        on_press:
            app.root.current = "Third"
    MDLabel:
        text: "Custom Orders"
        font_name: "/Users/m19-056/PycharmProjects/pythonProject1/Project_Unit_3/Project_Application/Fonts/Thornest.ttf"
        pos_hint: {'center_x': 0.5, 'center_y': 0.92}
        font_size: 50

    MDCard:
        orientation: "vertical"
        size_hint: 0.5,0.5
        md_bg_color: [0,0,0,0.5]
        padding: 20
        spacing: 20
        pos_hint: {"center_x":0.5, "center_y":0.5}



        MDDropDownItem:
            id: customer_id
            pos_hint: {"center_x": 0.5}
            text: "Select Customer"
            on_release:
                root.drop_item(self)
        MDDropDownItem:
            id: material_id
            pos_hint: {"center_x": 0.5}
            text: "Select Material"
            on_release:
                root.drop_material(self)
        MDTextField:
            id: color
            hint_text: "color"
            icon_right: "palette"
            size_hint_x: None
            pos_hint: {"center_x": 0.5}
            width: 200
            font_size: 18
        MDTextField:
            id: quantity
            hint_text: "quantity"
            icon_right: "numeric"
            filter: "int"
            size_hint_x: None
            pos_hint: {"center_x": 0.5}
            width: 200
            font_size: 18
        MDRoundFlatButton:
            text: "PLACE ORDER"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.place_order()

        MDRoundFlatButton:
            text: "DELETE ORDER"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.restart_order()


