<LoginScreen>:
    canvas.before:
        Rectangle:
            source: "/Users/m19-056/PycharmProjects/pythonProject1/Project_Unit_3/Project_Images/ping_pong_background.jpeg"
            size: self.size
            pos: self.pos
    MDLabel:
        text: "MANTIS RACKETS"
        font_name: "../Project_Application/Fonts/Franchise"
        font_size: 50
        halign: "center"
        pos_hint: {"center_x":0.12, "center_y":0.97}
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 1
    MDCard:
        size_hint: None, None
        size: 400, 400
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 10
        padding: 20
        spacing: 20
        orientation: "vertical"
        md_bg_color: [0,0,0,0.5]
        MDLabel:
            text: "S I G N  I N"
            font_name: "../Project_Application/Fonts/Thornest.ttf"
            font_size: 50
            pos_hint: {"center_x":0.55}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            helper_text: ""

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            helper_text: ""

        MDRoundFlatButton:
            text: "SIGN IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.try_login()

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.clear()

        MDTextButton:
            text: "Don't have an account? Sign Up Here"
            font_size: 12
            on_press:
                app.root.current = "Second"


